{
  "version": "1.1.0",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "ignoreChanges": ["docs", "*.md"],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "ignore": "ignore/*",
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}
